{
  "icc": {{ docker_arg.icc | bool | to_json }},
  "ipv6": {{ docker_arg.ipv6 | bool | to_json }},
  "live-restore": {{ docker_arg.live_restore | bool | to_json }},
  "log-driver": "{{ docker_arg.log_driver }}",
  "log-level": "{{ docker_arg.log_level }}",
{% if docker_syslog %}
  "log-opts": { "gelf-address": "udp://{{ docker_syslog_server | default('1.1.1.1') }}:{{ docker_syslog_port | default('12201') }}" },
{% endif %}
  "registry-mirrors": ["{{ docker_arg.registry_mirrors }}"],
  "metrics-addr": "0.0.0.0:{{ docker_port.metrics_port }}",
  "dns": ["{{ docker_arg.dns | join('", "') }}"],
{% if docker_port.metrics_port is defined %}
  "experimental": true,
{% endif %}
  "userland-proxy": {{ docker_arg.userland_proxy | bool | to_json }}
}
